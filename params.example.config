# Example parameter files for different scenarios

# Basic run with genome only
params {
    genome = "/path/to/your/genome.fasta"
    outdir = "results"
    species = "my_species"
    busco_db = "auto"
}

# Run with protein evidence
params {
    genome = "/path/to/your/genome.fasta"
    proteins = "/path/to/proteins.fasta"
    outdir = "results_with_proteins"
    species = "my_species"
    busco_db = "auto"
}

# Run with both protein and RNA-seq evidence
params {
    genome = "/path/to/your/genome.fasta"
    proteins = "/path/to/proteins.fasta"
    rna_seq = "/path/to/rnaseq_data"
    outdir = "results_complete"
    species = "my_species"
    busco_db = "auto"
}

# Bacterial genome annotation
params {
    genome = "/path/to/bacterial_genome.fasta"
    proteins = "/path/to/related_proteins.fasta"
    outdir = "bacterial_annotation"
    species = "my_bacteria"
    busco_db = "bacteria_odb10"
}

# Eukaryotic genome annotation
params {
    genome = "/path/to/eukaryotic_genome.fasta"
    proteins = "/path/to/related_proteins.fasta"
    rna_seq = "/path/to/rnaseq_data"
    outdir = "eukaryotic_annotation"
    species = "my_eukaryote"
    busco_db = "eukaryota_odb10"
}

# Fungal genome annotation
params {
    genome = "/path/to/fungal_genome.fasta"
    proteins = "/path/to/related_proteins.fasta"
    outdir = "fungal_annotation"
    species = "my_fungus"
    busco_db = "fungi_odb10"
}
